<%= render 'layouts/public' %>

<div class="container">
  <div class="row">
    <div class="col-3">
      <h3>商品一覧(全<%= @count %>件)</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <% @items.each do |item| %>
        <%= attachment_image_tag item , :image , format: 'jpeg' , size: "150x100" %><br>
        <%= link_to item_path(item.id) do %>
          <%= item.name %>
        <% end %><br>
        ￥<%= item.price %><br>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <%= paginate @items %>
    </div>
  </div>
</div>