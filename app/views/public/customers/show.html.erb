<%= render 'layouts/public' %>

<div class="container">
  <div class="row">
    <div class="col-3">
      <h3>マイページ</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-2"><h4>登録情報</h4></div>
    <div class="col-2"><%= link_to "編集する" , customers_edit_edit_path %></div>
  </div>
  <div class="row">
    <div class="col-6">
      <table border="1">
        <tr>
          <th>氏名</th><td><%= current_customer.last_name %> <%= current_customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th><td><%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th><td><%= current_customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th><td><%= current_customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th><td><%= current_customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th><td><%= current_customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-2"><h4>配送先</h4></div>
    <div class="col-2"><%= link_to "一覧を見る" , addresses_path %></div>
  </div>
  <div class="row">
    <div class="col-2"><h4>注文履歴</h4></div>
    <div class="col-2"><%= link_to "一覧を見る" , orders_path %></div>
  </div>
</div>