<%= render 'layouts/public' %>

<div class="container">
  <div class="row">
    <div class="col-3">
      <h3>注文履歴詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <h4>注文情報</h4>
      <table border="1">
        <tr>
          <th>注文日</th><td><%= l @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th><td>〒<%= @order.shipping_postal_code %><br><%= @order.shipping_address %><br><%= @order.shipping_name %></td>
        </tr>
        <tr>
          <th>支払方法</th><td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>ステータス</th><td><%= @order.ordered_status %></td>
        </tr>
      </table>
    </div>
    <div class="col-3">
      <h4>請求情報</h4>
      <table border="1">
        <tr>
          <th>商品合計</th><td><%= number_to_currency(@order.billing_amount-800 , :precision => 0) %></td>
        </tr>
        <tr>
          <th>配送料</th><td>800</td>
        </tr>
        <tr>
          <th>ご請求額</th><td><%= number_to_currency(@order.billing_amount , :precision => 0) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
      <table border="1">
        <thead>
          <tr>
            <th>商品</th><th>単価（税込）</th><th>個数</th><th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @ordered_products.each do |ordered_product| %>
            <tr>
              <td><%= ordered_product.item.name %></td>
              <td><%= ordered_product.price %></td>
              <td><%= ordered_product.quantity %></td>
              <td><%= ordered_product.price*ordered_product.quantity %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>