<%= render 'layouts/public' %>

<div class="container">
  <div class="row">
    <div class="col-3">
      <h3>配送先編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-10">
      <%= form_with model: @address , local: true do |f| %>
        <table>
          <tr>
            <td>
              <%= f.label :postal_code , "郵便番号(ハイフンなし)" %>
            </td>
            <td>
              <%= f.text_field :postal_code , placeholder: "0000000" , maxlength: 7 %>
            </td>
            <td></td>
          </tr>
          <tr>
            <td>
              <%= f.label :address , "住所" %>
            </td>
            <td>
              <%= f.text_field :address , size: 60 , placeholder: "東京都渋谷区代々木神園町0-0" %>
            </td>
            <td></td>
          </tr>
          <tr>
            <td>
              <%= f.label :name , "宛名" %>
            </td>
            <td>
              <%= f.text_field :name , placeholder: "令和道子" %>
            </td>
            <td>
              <%= f.submit "変更内容を保存" %>
            </td>
          <tr>
        </table>
      <% end %>
    </div>
  </div>
</div>