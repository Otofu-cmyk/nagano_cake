<%= render 'layouts/admin' %>

<div class="controller">
  <div class="row">
    <div class="col-2">
      <h3>商品一覧</h3>
    </div>
    <div class="col-1">
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus-circle"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-10">
      <table border="1">
        <thead>
          <tr>
            <th>商品ID</th><th>商品名</th><th>税抜価格</th><th>ジャンル</th><th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <% if item.is_active==true %>
                <td>販売中</td>
              <% else %>
                <td>販売停止中</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="5">
              <%= paginate @items %>
            </td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>