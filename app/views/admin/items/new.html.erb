<%= render 'layouts/admin' %>

<div class="container">
  <div class="row">
    <div class="col-3">
      <h3>商品新規登録</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <%= form_with model: @item , url: admin_items_path , local: true do |f| %>
        <table>
          <tr>
            <td>
              <%= f.label :image , "商品画像" , for: "image" %>
            </td>
            <td>
              <%= f.attachment_field :image , id: "image" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :name , "商品名" , for: "name" %>
            </td>
            <td>
              <%= f.text_field :name , placeholder: "商品名" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :introduction , "商品説明" , for: "introduction" %>
            </td>
            <td>
              <%= f.text_area :introduction , placeholder: "ここに説明文を記述します" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :genre_id , "ジャンル" , for: "genre_id" %>
            </td>
            <td>
              <%= f.collection_select :genre_id , @genres , :id , :name , prompt: "--選択してください--" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :price , "税抜き価格" , for: "price" %>
            </td>
            <td>
              <%= f.text_field :price , placeholder: "1000" %>円
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :is_active , "販売ステータス" , for: "is_active" %>
            </td>
            <td>
              <%= f.radio_button :is_active , true , checked: true %>販売中<%= f.radio_button :is_active , false %>販売停止中
            </td>
          </tr>
          <tr>
            <td></td><td><%= f.submit "新規登録" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>