<%= render 'layouts/admin' %>

<div class="container">
  <div class="row">
    <div class="col-5">
      <h3>
        <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-9">
      <%= form_with model: @customer , url: admin_customer_path , method: :patch , local: true do |f| %>
        <table>
          <tr>
            <th>会員ID</th><td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th><td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th><td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th><td><%= f.number_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th><td><%= f.text_field :address , size: 60 %></td>
          </tr>
          <tr>
            <th>電話番号</th><td><%= f.number_field :telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th><td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th><td><%= f.radio_button :is_active , true %>有効 <%= f.radio_button :is_active , false %>退会</td>
          </tr>
          <tr>
            <td></td><td><%= f.submit "変更を保存" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>