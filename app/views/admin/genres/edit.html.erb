<%= render 'layouts/admin' %>

<div class="container">
  <div class="row">
    <div class="col-3">
      <h3>ジャンル編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <%= form_with model: @genre , url: admin_genre_path(@genre.id) , local: true do |f| %>
        <%= f.label :name , "ジャンル名" %><%= f.text_field :name %><%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
</div>