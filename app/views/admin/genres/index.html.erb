<%= render 'layouts/admin' %>

<div class="container">
  <div class="row">
    <div class="col-3">
      <h3>ジャンル一覧・追加</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <%= form_with model: @genre , url: admin_genres_path , local: true do |f| %>
        <%= f.label :name , "ジャンル名" %>
        <%= f.text_field :name , placeholder: "ジャンル名" %>
        <%= f.submit "新規登録" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-4">
      <table border="1">
        <thead>
          <tr>
            <th>ジャンル</th><th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genres| %>
            <tr>
              <td><%= genres.name %></td><td><%= link_to "編集する" , edit_admin_genre_path(genres.id) %></td>
            </tr>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>